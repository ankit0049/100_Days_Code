public static int MaximumSum ( int arr[])
{
    int sum=0 ,start =0 , end =0 , max=0; 
    for(int i=0; i<arr.length; i++)
    {  

        // this condtion for the start point of subArray that have Maximum sum
         if(sum==0)
         {
            start=i;
         }
        sum+=arr[i]; 
        /* why here use if conditions we can use max function also  
        but this help to track which subArray sum is max */
        if(sum>max)
        {
            max = sum;  
            end = i;
        } 
        if(sum<0)
        {
            sum=0;
        }
    } 
    return max // maximum subArray 

    // for subArray 
    return arr these value(start to end);
}