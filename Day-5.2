public  static  void Combination(int arr[] , int ind,int sum , int t)
    {
        if(ind==arr.length)
        {
            return;
        }
       if(sum+arr[ind]<=t){
          sum+=arr[ind]; 

       }
        Combination(arr,ind+1,sum,t); 
        sum-=arr[arr.length-1];  
           
       Combination(arr,ind+1,sum , t);


    }
    public static void main(String[] args) {
        int arr[] ={1,3,4,2};
        Combination(arr,0,0 ,6);
    }