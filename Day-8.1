Public static void NextGreater(int arr[])
{
    Stack<Integer> st = new Stack();
    int n = arr.length; 
    int nge[] = new int[n];
    for(int i=2*n-1;i>=0; i--)
    {
        while(!(st.isEmpty()) &&arr[i%n]<=st.peek()) 
        {
            st.pop();
        } 
     
        if (i < n) {
            if (!(st.isEmpty())) nge[i] = st.peek();
            else nge[i] = -1;
        }
        st.push (arr[i%n]);

    } 
    return nge;
}